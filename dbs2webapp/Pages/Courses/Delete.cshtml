@page
@model dbs2webapp.Pages.Courses.DeleteModel
@{
    ViewData["Title"] = "Delete Course";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-danger">Are you sure you want to delete this course?</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Course Name</dt>
                        <dd class="col-sm-9">@Model.Course.Name</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Course.Description</dd>

                        <dt class="col-sm-3">Created By</dt>
                        <dd class="col-sm-9">@Model.Course.Teacher?.Email</dd>

                        <dt class="col-sm-3">Chapters</dt>
                        <dd class="col-sm-9">@Model.Course.Chapters?.Count</dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Course.Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="/TeacherPanel" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left me-1"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-1"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>