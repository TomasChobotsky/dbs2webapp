@page
@model dbs2webapp.Pages.Chapters.IndexModel
@{
    ViewData["Title"] = Model.Course.Name;
}

<div class="container">
    <h1>@Model.Course.Name</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="list-group mt-4">
        @foreach (var chapter in Model.Chapters)
        {
            <div class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5>@chapter.Name</h5>
                        <p class="mb-1">@chapter.Description</p>
                    </div>
                    <a asp-page="/Chapters/Learn" asp-route-id="@chapter.Id" class="btn btn-primary">
                        Learn
                    </a>
                </div>
            </div>
        }
    </div>

    <div class="mt-3">
        <a asp-page="/Courses/Index" class="btn btn-secondary">Back to Courses</a>
    </div>
</div>