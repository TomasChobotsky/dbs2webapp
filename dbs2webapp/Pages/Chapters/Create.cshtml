@page
@model CreateModel
@{
    ViewData["Title"] = "Create New Chapter";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3>@ViewData["Title"]</h3>
            <h5>For Course: @Model.Course.Name</h5>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Course.Id" />

                <div class="form-group mb-3">
                    <label asp-for="Chapter.Name" class="form-label"></label>
                    <input asp-for="Chapter.Name" class="form-control" />
                    <span asp-validation-for="Chapter.Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Chapter.Description" class="form-label">Short Description</label>
                    <textarea asp-for="Chapter.Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Chapter.Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label class="form-label">Chapter Content</label>
                    <textarea id="rich-content" name="Chapter.Content" class="form-control"></textarea>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-page="/Courses/Index" asp-route-id="@Model.Course.Id"
                       class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Course
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Create Chapter
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}