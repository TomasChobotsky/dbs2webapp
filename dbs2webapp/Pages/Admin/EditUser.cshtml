@page
@model dbs2webapp.Pages.Admin.EditUserModel
@{
    ViewData["Title"] = "Edit User Roles";
}

<h1>Edit Roles for @Model.UserEmail</h1>

<form method="post">
    <div class="form-group">
        @foreach (var role in Model.AllRoles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@role" 
                       id="@role" @(Model.UserRoles.Contains(role) ? "checked" : "")>
                <label class="form-check-label" for="@role">
                    @role
                </label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>